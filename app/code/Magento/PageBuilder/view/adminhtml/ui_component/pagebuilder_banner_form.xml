<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_banner_form.pagebuilder_banner_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Banner</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_banner_form.pagebuilder_banner_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_banner_form</namespace>
    </settings>
    <dataSource name="pagebuilder_banner_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_banner_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance" sortOrder="10">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="appearance" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">poster</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Appearance</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">poster</item>
                                <item name="label" xsi:type="string" translate="true">Poster</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">collage-left</item>
                                <item name="label" xsi:type="string" translate="true">Collage Left</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">collage-centered</item>
                                <item name="label" xsi:type="string" translate="true">Collage Center</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">collage-right</item>
                                <item name="label" xsi:type="string" translate="true">Collage Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="min_height" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">300</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Minimum Height</label>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <addAfter>px</addAfter>
                <dataType>text</dataType>
                <dataScope>min_height</dataScope>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="20">
        <settings>
            <label translate="true">Background</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Background Color</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <addAfter>hex color</addAfter>
                <dataType>text</dataType>
                <dataScope>background_color</dataScope>
            </settings>
        </field>
        <field name="background_image" sortOrder="20" formElement="imageUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Background Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview/image.html</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="mobile_image" sortOrder="30" formElement="imageUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Background Mobile Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview/image.html</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="background_position" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">top_aligned</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Position</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">left bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_size" sortOrder="50" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">auto</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Size</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">auto</item>
                                <item name="label" xsi:type="string" translate="true">Auto</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">cover</item>
                                <item name="label" xsi:type="string" translate="true">Cover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">contain</item>
                                <item name="label" xsi:type="string" translate="true">Contain</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_repeat" sortOrder="60" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Background Repeat</label>
                <dataScope>background_repeat</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">scroll</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Attachment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">scroll</item>
                                <item name="label" xsi:type="string" translate="true">Scroll</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">fixed</item>
                                <item name="label" xsi:type="string" translate="true">Fixed</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="contents" sortOrder="30">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="message" sortOrder="10" formElement="wysiwyg" template="ui/form/field">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                        <item name="height" xsi:type="string">200px</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Message Text</label>
                <dataScope>message</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="link_url" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Link</label>
                <dataType>text</dataType>
                <dataScope>link_url</dataScope>
            </settings>
        </field>
        <field name="open_in_new_tab" sortOrder="30" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">false</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Open in new tab</label>
                <dataScope>open_in_new_tab</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="show_button" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">never_show</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Button</label>
                <dataScope>show_button</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">always</item>
                                <item name="label" xsi:type="string" translate="true">Always</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">on_hover</item>
                                <item name="label" xsi:type="string" translate="true">On Hover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">never_show</item>
                                <item name="label" xsi:type="string" translate="true">Never Show</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="button_text" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Button Text</label>
                <dataType>text</dataType>
                <dataScope>button_text</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_button:value</link>
                </imports>
            </settings>
        </field>
        <field name="button_type" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">pagebuilder-button-primary</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Button Type</label>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_button:value</link>
                </imports>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">pagebuilder-button-primary</item>
                                <item name="label" xsi:type="string" translate="true">Primary</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">pagebuilder-button-secondary</item>
                                <item name="label" xsi:type="string" translate="true">Secondary</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">pagebuilder-button-link</item>
                                <item name="label" xsi:type="string" translate="true">Link</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="show_overlay" sortOrder="70" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">never_show</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Show Overlay</label>
                <dataScope>show_overlay</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">always</item>
                                <item name="label" xsi:type="string" translate="true">Always</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">on_hover</item>
                                <item name="label" xsi:type="string" translate="true">On Hover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">never_show</item>
                                <item name="label" xsi:type="string" translate="true">Never Show</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="overlay_color" sortOrder="80" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Overlay Color</label>
                <additionalClasses>
                    <class name="admin__field-small">true</class>
                </additionalClasses>
                <addAfter>hex color</addAfter>
                <dataType>text</dataType>
                <dataScope>overlay_color</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_overlay:value</link>
                </imports>
            </settings>
        </field>
        <field name="overlay_transparency" sortOrder="90" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="number">0</item>
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">never_show</item>
                    </item>
                </item>
            </argument>
            <settings>
                <label translate="true">Overlay Transparency</label>
                <additionalClasses>
                    <class name="admin__field-x-small">true</class>
                </additionalClasses>
                <addAfter>%</addAfter>
                <dataType>text</dataType>
                <dataScope>overlay_transparency</dataScope>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = show_overlay:value</link>
                </imports>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                    <rule name="less-than-equals-to" xsi:type="number">100</rule>
                    <rule name="greater-than-equals-to" xsi:type="number">0</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="margin" xsi:type="array">
                            <item name="top" xsi:type="number">0</item>
                            <item name="right" xsi:type="number">0</item>
                            <item name="bottom" xsi:type="number">0</item>
                            <item name="left" xsi:type="number">0</item>
                        </item>
                        <item name="padding" xsi:type="array">
                            <item name="top" xsi:type="number">40</item>
                            <item name="right" xsi:type="number">40</item>
                            <item name="bottom" xsi:type="number">40</item>
                            <item name="left" xsi:type="number">40</item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
