<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_column_form.pagebuilder_column_form_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_column_form.pagebuilder_column_form_data_source</dep>
        </deps>
        <dataScope>data</dataScope>
        <namespace>pagebuilder_column_form</namespace>
        <buttons>
            <button name="save" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="pagebuilder_column_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_column_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="width" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">50%</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <visible>false</visible>
                <label />
            </settings>
        </field>
        <field name="appearance" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">full-height</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Appearance</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">full-height</item>
                                <item name="label" xsi:type="string" translate="true">Full Height</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">align-top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">align-center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">align-bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="min_height" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Minimum Height</label>
                <addAfter>px</addAfter>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="background">
        <settings>
            <label translate="true">Background</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Background Color</label>
            </settings>
        </field>
        <field name="background_image" sortOrder="20" formElement="imageUploader">
            <settings>
                <label translate="true">Background Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview/image.html</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="background_position" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">top_aligned</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Position</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">left bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_size" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">auto</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Size</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">auto</item>
                                <item name="label" xsi:type="string" translate="true">Auto</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">cover</item>
                                <item name="label" xsi:type="string" translate="true">Cover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">contain</item>
                                <item name="label" xsi:type="string" translate="true">Contain</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_repeat" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Background Repeat</label>
                <dataScope>background_repeat</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">scroll</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Attachment</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">scroll</item>
                                <item name="label" xsi:type="string" translate="true">Scroll</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">fixed</item>
                                <item name="label" xsi:type="string" translate="true">Fixed</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="text_align" sortOrder="10" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string" />
                                <item name="label" xsi:type="string" translate="true">Default</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <item name="label" xsi:type="string" translate="true">Center</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="border" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">none</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">_default</item>
                                <item name="label" xsi:type="string" translate="true">Default</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">none</item>
                                <item name="label" xsi:type="string" translate="true">None</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">dotted</item>
                                <item name="label" xsi:type="string" translate="true">Dotted</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">dashed</item>
                                <item name="label" xsi:type="string" translate="true">Dashed</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">solid</item>
                                <item name="label" xsi:type="string" translate="true">Solid</item>
                            </option>
                            <option name="5" xsi:type="array">
                                <item name="value" xsi:type="string">double</item>
                                <item name="label" xsi:type="string" translate="true">Double</item>
                            </option>
                            <option name="6" xsi:type="array">
                                <item name="value" xsi:type="string">groove</item>
                                <item name="label" xsi:type="string" translate="true">Groove</item>
                            </option>
                            <option name="7" xsi:type="array">
                                <item name="value" xsi:type="string">ridge</item>
                                <item name="label" xsi:type="string" translate="true">Ridge</item>
                            </option>
                            <option name="8" xsi:type="array">
                                <item name="value" xsi:type="string">inset</item>
                                <item name="label" xsi:type="string" translate="true">Inset</item>
                            </option>
                            <option name="9" xsi:type="array">
                                <item name="value" xsi:type="string">outset</item>
                                <item name="label" xsi:type="string" translate="true">Outset</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="border_color" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">none</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Color</label>
                <addAfter>hex color</addAfter>
                <dataScope>border_color</dataScope>
                <placeholder>Default</placeholder>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = border:value</link>
                </imports>
            </settings>
        </field>
        <field name="border_width" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="disabledValues" xsi:type="array">
                        <item name="none" xsi:type="string">none</item>
                    </item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Width</label>
                <addAfter>px</addAfter>
                <dataScope>border_width</dataScope>
                <placeholder>Default</placeholder>
                <imports>
                    <link name="setDisabled">ns = ${ $.ns }, index = border:value</link>
                </imports>
            </settings>
        </field>
        <field name="border_radius" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Radius</label>
                <addAfter>px</addAfter>
                <dataScope>border_radius</dataScope>
                <placeholder>Default</placeholder>
            </settings>
        </field>
        <field name="css_classes" sortOrder="60" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="margins_and_padding" sortOrder="70" formElement="input" component="Magento_PageBuilder/js/form/element/margins-and-padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"bottom":"0","left":"0","right":"0","top":"0"},"padding":{"bottom":"10","left":"10","right":"10","top":"10"}}</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Margins and Padding</label>
                <placeholder>Default</placeholder>
            </settings>
        </field>
    </fieldset>
</form>
