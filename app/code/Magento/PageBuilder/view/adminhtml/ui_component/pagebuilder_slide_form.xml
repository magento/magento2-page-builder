<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_slide_form.pagebuilder_slide_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Slide</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_slide_form.pagebuilder_slide_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_slide_form</namespace>
    </settings>
    <dataSource name="pagebuilder_slide_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_slide_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="title" sortOrder="1" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="content" sortOrder="10" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="is_pagebuilder_enabled" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="link_text" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Link Text</label>
                <dataType>text</dataType>
                <dataScope>link_text</dataScope>
            </settings>
        </field>
        <field name="link_url" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Link URL</label>
                <dataType>text</dataType>
                <dataScope>link_url</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="appearance" sortOrder="20">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_image" sortOrder="1" formElement="imageUploader">
            <settings>
                <label translate="true">Background Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview/image.html</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="has_overlay_background" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Has Overlay Background</label>
                <notice translate="true">This will add a semi transparent overlay behind the slide content</notice>
                <dataScope>has_overlay_background</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"top":"0","right":"0","bottom":"0","left":"0"},"padding":{"top":"40","right":"40","bottom":"40","left":"40"}}</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
