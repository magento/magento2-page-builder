<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_slide_form.pagebuilder_slide_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Slide</item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_slide_form.pagebuilder_slide_form_data_source</dep>
        </deps>
        <dataScope>data</dataScope>
        <namespace>pagebuilder_slide_form</namespace>
        <buttons>
            <button name="save" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Magento\PageBuilder\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="pagebuilder_slide_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_slide_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Content</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="title" sortOrder="1" formElement="input">
            <settings>
                <label translate="true">Title</label>
                <validation>
                    <rule name="validate-string" xsi:type="boolean">true</rule>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
        <field name="content" sortOrder="10" formElement="wysiwyg">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">page</item>
                    <item name="wysiwygConfigData" xsi:type="array">
                        <item name="pagebuilder_button" xsi:type="boolean">false</item>
                        <item name="toggle_button" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
            <settings>
                <additionalClasses>
                    <class name="admin__field-wide">true</class>
                </additionalClasses>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <label translate="true">Content</label>
                <dataScope>content</dataScope>
            </settings>
            <formElements>
                <wysiwyg>
                    <settings>
                        <wysiwyg>true</wysiwyg>
                    </settings>
                </wysiwyg>
            </formElements>
        </field>
        <field name="link_text" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Link Text</label>
                <dataType>text</dataType>
                <dataScope>link_text</dataScope>
            </settings>
        </field>
        <field name="link_url" sortOrder="30" formElement="input">
            <settings>
                <label translate="true">Link URL</label>
                <dataType>text</dataType>
                <dataScope>link_url</dataScope>
            </settings>
        </field>
    </fieldset>
    <fieldset name="appearance">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_image" sortOrder="1" formElement="fileUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Background Image</label>
                <componentType>fileUploader</componentType>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>4194304</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview.html</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="has_overlay_background" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Has Overlay Background</label>
                <notice translate="true">This will add a semi transparent overlay behind the slide content</notice>
                <dataScope>has_overlay_background</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="css_classes" sortOrder="1" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="text_align" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">left</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <item name="label" xsi:type="string" translate="true">Center</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="margins_and_padding" sortOrder="20" formElement="input" component="Magento_PageBuilder/js/form/element/margins_and_padding">
            <settings>
                <label translate="true">Margins and Padding</label>
            </settings>
        </field>
    </fieldset>

</form>
