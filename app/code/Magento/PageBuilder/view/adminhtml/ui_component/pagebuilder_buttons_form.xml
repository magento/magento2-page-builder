<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_buttons_form.pagebuilder_buttons_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Buttons</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_buttons_form.pagebuilder_buttons_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_buttons_form</namespace>
    </settings>
    <dataSource name="pagebuilder_buttons_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_buttons_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="advanced">
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="margin" xsi:type="array">
                            <item name="top" xsi:type="number">0</item>
                            <item name="right" xsi:type="number">0</item>
                            <item name="bottom" xsi:type="number">0</item>
                            <item name="left" xsi:type="number">0</item>
                        </item>
                        <item name="padding" xsi:type="array">
                            <item name="top" xsi:type="number">10</item>
                            <item name="right" xsi:type="number">10</item>
                            <item name="bottom" xsi:type="number">0</item>
                            <item name="left" xsi:type="number">10</item>
                        </item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
