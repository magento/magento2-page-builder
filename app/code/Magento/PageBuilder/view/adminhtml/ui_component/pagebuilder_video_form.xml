<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_video_form.pagebuilder_video_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Video</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_video_form.pagebuilder_video_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_video_form</namespace>
    </settings>
    <dataSource name="pagebuilder_video_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_video_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label/>
        </settings>
        <field name="video_source" formElement="input">
            <settings>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
                <dataType>text</dataType>
                <label translate="true">Video Embed URL</label>
                <notice translate="true">Supports YouTube &amp; Vimeo.</notice>
                <tooltip>
                    <description translate="true">Please enter the full embed URL for the video e.g. https://www.youtube.com/embed/slOtnjsbff0. You can retrieve this URL via the "Share" option under the video.</description>
                </tooltip>
            </settings>
        </field>
        <field name="video_width" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Width</label>
                <addAfter>px or %</addAfter>
                <notice translate="true">Example: 50px or 100%</notice>
            </settings>
        </field>
        <field name="video_height" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="source" xsi:type="string">block</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Height</label>
                <addAfter>px or %</addAfter>
                <notice translate="true">Example: 50px or 100%</notice>
            </settings>
        </field>
    </fieldset>
</form>
