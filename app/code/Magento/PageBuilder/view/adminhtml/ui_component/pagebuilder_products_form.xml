<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_products_form.pagebuilder_products_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Products</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_products_form.pagebuilder_products_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_products_form</namespace>
    </settings>
    <dataSource name="pagebuilder_products_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_products_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general" sortOrder="10">
        <settings>
            <label/>
        </settings>
        <field name="view_mode" sortOrder="1" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">grid</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Product Display</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">grid</item>
                                <item name="label" xsi:type="string" translate="true">Grid</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">list</item>
                                <item name="label" xsi:type="string" translate="true">List</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="sku" sortOrder="10" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Product SKU</label>
                <dataScope>sku</dataScope>
            </settings>
        </field>
    </fieldset>
</form>
