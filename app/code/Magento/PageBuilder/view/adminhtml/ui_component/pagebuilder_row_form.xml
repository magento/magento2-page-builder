<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd" extends="pagebuilder_base_form">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">pagebuilder_row_form.pagebuilder_row_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Row</item>
    </argument>
    <settings>
        <deps>
            <dep>pagebuilder_row_form.pagebuilder_row_form_data_source</dep>
        </deps>
        <namespace>pagebuilder_row_form</namespace>
    </settings>
    <dataSource name="pagebuilder_row_form_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_PageBuilder/js/form/provider</item>
            </item>
        </argument>
        <dataProvider name="pagebuilder_row_form_data_source" class="Magento\PageBuilder\Model\ContentBlock\DataProvider">
            <settings>
                <requestFieldName/>
                <primaryFieldName/>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="appearance" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-fieldset">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
            <imports>
                <link name="appearancesHidden">${$.name}.appearance:options</link>
            </imports>
        </settings>
        <field name="appearance" formElement="select" sortOrder="10" component="Magento_PageBuilder/js/form/element/dependent-select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Appearance</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">default</item>
                                <item name="label" xsi:type="string" translate="true">Default</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="background" sortOrder="20">
        <settings>
            <label translate="true">Background</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Background Color</label>
            </settings>
        </field>
        <field name="background_image" sortOrder="20" formElement="imageUploader">
            <settings>
                <label translate="true">Background Image</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">pagebuilder/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Magento_PageBuilder/form/element/uploader/preview/image.html</previewTmpl>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
        <field name="background_position" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">top_aligned</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Position</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">left bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_size" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">auto</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Size</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">auto</item>
                                <item name="label" xsi:type="string" translate="true">Auto</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">cover</item>
                                <item name="label" xsi:type="string" translate="true">Cover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">contain</item>
                                <item name="label" xsi:type="string" translate="true">Contain</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_repeat" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Background Repeat</label>
                <dataScope>background_repeat</dataScope>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">scroll</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Attachment</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">scroll</item>
                                <item name="label" xsi:type="string" translate="true">Scroll</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">fixed</item>
                                <item name="label" xsi:type="string" translate="true">Fixed</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="parallax_background" sortOrder="20">
        <settings>
            <label translate="true">Parallax Background</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="enable_parallax" sortOrder="10" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Enable Parallax Background</label>
                <dataScope>enable_parallax</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="parallax_speed" sortOrder="20" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <label translate="true">Parallax Speed</label>
                <dataScope>parallax_speed</dataScope>
                <notice translate="true">Store View</notice>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <field name="margins_and_padding">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">{"margin":{"top":"0","right":"0","bottom":"10","left":"0"},"padding":{"top":"10","right":"10","bottom":"10","left":"10"}}</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
