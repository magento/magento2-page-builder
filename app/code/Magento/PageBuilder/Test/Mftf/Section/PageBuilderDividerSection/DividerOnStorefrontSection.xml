<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Page/etc/SectionObject.xsd">
    <section name="DividerOnStorefront">
        <element name="allDividers" type="text" selector="//div[@data-content-type='divider']"/>
        <element name="baseCSS" type="text" selector="[data-content-type=divider]"/>
        <element name="base" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]" parameterized="true"/>
        <element name="lineElementCSS" type="text" selector="[data-content-type=divider] hr"/>
        <element name="hidden" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style, 'display: none')]" parameterized="true"/>
        <element name="notHidden" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][not(contains(@style, 'display: none'))]" parameterized="true"/>
        <element name="color" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[contains(@style,'border-color: {{arg2}};')]" parameterized="true"/>
        <element name="noColor" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[not(contains(@style,'border-color:'))]" parameterized="true"/>
        <element name="thickness" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[contains(@style,'border-width: {{arg2}}px;')]" parameterized="true"/>
        <element name="noThickness" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[not(contains(@style,'border-width:'))]" parameterized="true"/>
        <element name="width" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[contains(@style,'width: {{arg2}};')]" parameterized="true"/>
        <element name="noWidth" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}]//hr[not(starts-with(@style,'width:')) and not(contains(@style,' width:'))]" parameterized="true"/>
        <!-- Advanced Configuration -->
        <element name="alignment" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'text-align: {{arg2}};')]//hr[contains(@style,'display: inline-block;')]" parameterized="true"/>
        <element name="noAlignment" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][not(contains(@style,'text-align:'))]" parameterized="true"/>
        <element name="border" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'border-style: {{arg2}};')]" parameterized="true"/>
        <element name="borderWidth" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'border-width: {{arg2}}px;')]" parameterized="true"/>
        <element name="borderColor" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'border-color: {{arg2}};')]" parameterized="true"/>
        <element name="noBorderColor" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][not(contains(@style,'border-color:'))]" parameterized="true"/>
        <element name="borderRadius" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'border-radius: {{arg2}}px;')]" parameterized="true"/>
        <element name="cssClasses" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][@class='{{arg2}}']" parameterized="true"/>
        <element name="noCssClasses" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][not(@class)]" parameterized="true"/>
        <element name="margins" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'margin: {{arg2}}px;')]" parameterized="true"/>
        <element name="padding" type="text" selector="(//div[@data-content-type='divider'])[{{arg1}}][contains(@style,'padding: {{arg2}}px;')]" parameterized="true"/>
    </section>
</sections>
