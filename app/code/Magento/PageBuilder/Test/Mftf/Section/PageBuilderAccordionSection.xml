<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../../dev/tests/acceptance/vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="AccordionEditSection">
        <element name="addNewItem" type="button" selector="//button/span[contains(text(), 'Add New Accordion Item')]"/>
        <element name="itemTitle" type="input" selector="//*[@name='items[{{arg1}}][title]']" parameterized="true"/>
        <element name="itemContent" type="input" selector="//*[@name='items[{{arg1}}][content]']" parameterized="true"/>
        <element name="itemOpenOnLoad" type="input" selector="//input[@name='items[{{arg1}}][open_on_load]']//..//label" parameterized="true"/>
        <element name="itemOpenOnLoadState" type="input" selector="//input[@name='items[{{arg1}}][open_on_load]'][@value='{{arg2}}']" parameterized="true"/>
    </section>
    <section name="AccordionOnStage">
        <element name="all" type="button" selector="//div[@class='pagebuilder-accordion']"/>
        <element name="default" type="button" selector="(//div[@class='pagebuilder-accordion'])[{{arg1}}][@style='border-width: {{arg2}}px; border-radius: {{arg3}}px; margin: {{arg4}}px; padding: {{arg5}}px;']" parameterized="true"/>
    </section>
    <section name="AccordionFrontendSection">
        <element name="itemTitleElement" type="button" selector="//div[@data-role='accordion']/div[@data-collapsible='true']/div[@data-role='trigger']/span[contains(text(), '{{arg1}}')]" parameterized="true"/>
        <element name="itemContentElement" type="button" selector="//div[@class='accordion-content'][contains(text(), '{{arg1}}')]" parameterized="true"/>
    </section>
</sections>
