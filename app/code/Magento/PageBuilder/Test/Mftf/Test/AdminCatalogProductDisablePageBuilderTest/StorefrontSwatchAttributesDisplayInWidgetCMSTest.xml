<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="StorefrontSwatchAttributesDisplayInWidgetCMSTest">
        <before>
            <magentoCLI command="config:set cms/pagebuilder/enabled 0" stepKey="disablePageBuilder"/>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="flushCache" after="disablePageBuilder">
                <argument name="tags" value="config"/>
            </actionGroup>
        </before>
        <after>
            <magentoCLI command="config:set cms/pagebuilder/enabled 1" stepKey="enablePageBuilder"/>
            <actionGroup ref="CliCacheCleanActionGroup" stepKey="flushCache" after="enablePageBuilder">
                <argument name="tags" value="config"/>
            </actionGroup>
        </after>
    </test>
</tests>
