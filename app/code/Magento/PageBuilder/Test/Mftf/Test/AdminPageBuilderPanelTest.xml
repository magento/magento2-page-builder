        <comment userInput="Validate layout menu section" stepKey="commentValidatePanel1"/>
        <seeElement selector="{{PageBuilderPanel.contentTypeInMenuSection('1', 'Layout', '1', 'Row')}}" stepKey="validateContentTypeRow"/>
