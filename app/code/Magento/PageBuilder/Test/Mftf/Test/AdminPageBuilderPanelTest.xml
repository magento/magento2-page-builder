        <click selector="{{PageBuilderPanel.panelMenuSection('Elements')}}" stepKey="closeElementMenuSection"/>
        <!-- Validate Media menu section -->
        <comment userInput="Validate media menu section" stepKey="commentValidatePanel3"/>
