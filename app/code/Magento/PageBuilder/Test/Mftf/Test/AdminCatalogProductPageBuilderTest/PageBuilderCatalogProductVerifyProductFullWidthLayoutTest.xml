        <waitForElementVisible selector="{{StorefrontProductFullWidth.related}}" stepKey="waitForRelatedProducts"/>
        <waitForElementVisible selector="{{StorefrontProductFullWidth.upsell}}" stepKey="waitForUpSellProducts"/>

