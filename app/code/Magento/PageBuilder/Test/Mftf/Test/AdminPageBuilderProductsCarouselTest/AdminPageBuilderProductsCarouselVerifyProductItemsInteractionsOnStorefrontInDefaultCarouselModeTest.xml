<tests xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/testSchema.xsd">
    <test name="AdminPageBuilderProductsCarouselVerifyProductItemsInteractionsOnStorefrontInDefaultCarouselModeTest" extends="AdminPageBuilderProductsVerifyProductItemsInteractionsOnStorefrontTest">
        <annotations>
            <features value="PageBuilder"/>
            <stories value="Products"/>
            <title value="Carousel - Verify Product Items Can Be Interacted With On Storefront in a Default Mode Product Carousel"/>
            <description value="Verify that users are able to interact with products on the storefront, including add to cart, add to wish list, etc."/>
            <severity value="BLOCKER"/>
            <testCaseId value="MC-22723"/>
            <useCaseId value="PB-173"/>
            <group value="pagebuilder"/>
            <group value="pagebuilder-products"/>
            <group value="pagebuilder-productsCarousel"/>
        </annotations>
        <actionGroup ref="chooseVisualSelectOption" stepKey="selectAppearance">
            <argument name="property" value="PageBuilderProductsProductCarouselAppearance"/>
        </actionGroup>
    </test>
</tests>
