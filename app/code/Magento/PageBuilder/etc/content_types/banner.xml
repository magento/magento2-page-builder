                                </attributes>
                            </element>
                            <element name="desktop_image" path=".//a/div[1]">
                                <style_properties>
                                    <property name="text_align" var="text_align"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/remove-px" name="min_height" var="min_height"/>
