                                    <property name="background_repeat" var="background_repeat"/>
                                    <property name="background_attachment" var="background_attachment"/>
                                    <property converter="Magento_PageBuilder/js/converter/default/style/paddings" name="padding" var="margins_and_padding" virtual="true"/>
