<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_PageBuilder:etc/content_types.xsd">
    <groups>
        <group name="general" translate="label" sortOrder="1">
            <label>General</label>
        </group>
        <group name="media" translate="label" sortOrder="10">
            <label>Media</label>
        </group>
        <group name="interactive" translate="label" sortOrder="20">
            <label>Interactive</label>
        </group>
        <group name="magento" translate="label" sortOrder="30">
            <label>Magento</label>
        </group>
        <group name="other" translate="label" sortOrder="40">
            <label>Other</label>
        </group>
    </groups>
    <content_types>
        <type name="row" translate="label" sortOrder="1">
            <label>Row</label>
            <icon>icon-pagebuilder-row</icon>
            <component>Magento_PageBuilder/js/component/block/row</component>
            <preview_template>Magento_PageBuilder/component/block/preview/row.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/row.html</render_template>
            <form>pagebuilder_row_form</form>
            <group>general</group>
            <allowed_parents>stage</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="column" translate="label" sortOrder="10">
            <label>Column</label>
            <icon>icon-pagebuilder-column</icon>
            <preview_template>Magento_PageBuilder/component/block/preview/column.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/column.html</render_template>
            <form>pagebuilder_column_form</form>
            <group>general</group>
            <allowed_parents>row</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
            <appearances>
                <appearance name="align-top">
                    <data name="align_self">flex-start</data>
                </appearance>
                <appearance name="align-center">
                    <data name="align_self">center</data>
                </appearance>
                <appearance name="align-bottom">
                    <data name="align_self">flex-end</data>
                </appearance>
            </appearances>
        </type>
        <type name="text" translate="label" sortOrder="20">
            <label>Text</label>
            <icon>icon-pagebuilder-text</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_template>Magento_PageBuilder/component/block/preview/text.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/text.html</render_template>
            <form>pagebuilder_text_form</form>
            <group>general</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/text"/>
            </readers>
        </type>
        <type name="heading" translate="label" sortOrder="30">
            <label>Header</label>
            <icon>icon-pagebuilder-heading</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_template>Magento_PageBuilder/component/block/preview/header.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/header.html</render_template>
            <form>pagebuilder_heading_form</form>
            <group>general</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="heading" component="Magento_PageBuilder/js/component/format/read/heading"/>
            </readers>
        </type>
        <type name="button-item" translate="label">
            <label>Button</label>
            <icon>icon-pagebuilder-button</icon>
            <component>Magento_PageBuilder/js/component/block/button-item</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/button-item</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/button-item.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/button-item.html</render_template>
            <form>pagebuilder_button_item_form</form>
            <group>general</group>
            <allowed_parents>buttons</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="button-item" component="Magento_PageBuilder/js/component/format/read/button-item"/>
            </readers>
            <is_visible>false</is_visible>
        </type>
        <type name="buttons" translate="label" sortOrder="40">
            <label>Buttons</label>
            <icon>icon-pagebuilder-button</icon>
            <component>Magento_PageBuilder/js/component/block/buttons</component>
            <preview_template>Magento_PageBuilder/component/block/preview/buttons.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/buttons.html</render_template>
            <form>pagebuilder_buttons_form</form>
            <group>general</group>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
            <allowed_parents>row,column</allowed_parents>
        </type>
        <type name="divider" translate="label" sortOrder="50">
            <label>Divider</label>
            <icon>icon-pagebuilder-divider</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_template>Magento_PageBuilder/component/block/preview/divider.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/divider.html</render_template>
            <form>pagebuilder_divider_form</form>
            <group>general</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="image" translate="label" sortOrder="1">
            <label>Image</label>
            <icon>icon-pagebuilder-image</icon>
            <component>Magento_PageBuilder/js/component/block/image</component>
            <preview_template>Magento_PageBuilder/component/block/preview/image.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/image.html</render_template>
            <form>pagebuilder_image_form</form>
            <group>media</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="image" component="Magento_PageBuilder/js/component/format/read/image"/>
            </readers>
            <appearances>
                <appearance name="full-width">
                    <preview_template>Magento_PageBuilder/component/block/preview/image.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/image.html</render_template>
                </appearance>
            </appearances>
        </type>
        <type name="banner" translate="label" sortOrder="1">
            <label>Banner</label>
            <icon>icon-pagebuilder-image</icon>
            <component>Magento_PageBuilder/js/component/block/banner</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/banner</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/banner.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/banner.html</render_template>
            <form>pagebuilder_banner_form</form>
            <group>media</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="banner" component="Magento_PageBuilder/js/component/format/read/banner"/>
            </readers>
            <appearances>
                <appearance name="collage-left">
                    <preview_template>Magento_PageBuilder/component/block/preview/appearance/banner/collage-left.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/appearance/banner/collage-left.html</render_template>
                    <readers>
                        <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                        <reader name="collage" component="Magento_PageBuilder/js/component/format/read/appearance/banner/collage"/>
                    </readers>
                </appearance>
                <appearance name="collage-centered">
                    <preview_template>Magento_PageBuilder/component/block/preview/appearance/banner/collage-centered.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/appearance/banner/collage-centered.html</render_template>
                    <readers>
                        <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                        <reader name="collage" component="Magento_PageBuilder/js/component/format/read/appearance/banner/collage"/>
                    </readers>
                </appearance>
                <appearance name="collage-right">
                    <preview_template>Magento_PageBuilder/component/block/preview/appearance/banner/collage-right.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/appearance/banner/collage-right.html</render_template>
                    <readers>
                        <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                        <reader name="collage" component="Magento_PageBuilder/js/component/format/read/appearance/banner/collage"/>
                    </readers>
                </appearance>
                <appearance name="poster">
                    <preview_template>Magento_PageBuilder/component/block/preview/banner.html</preview_template>
                    <render_template>Magento_PageBuilder/component/block/render/banner.html</render_template>
                    <readers>
                        <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                        <reader name="poster" component="Magento_PageBuilder/js/component/format/read/banner"/>
                    </readers>
                </appearance>
            </appearances>
        </type>
        <type name="video" translate="label" sortOrder="10">
            <label>Video</label>
            <icon>icon-pagebuilder-video</icon>
            <component>Magento_PageBuilder/js/component/block/video</component>
            <preview_template>Magento_PageBuilder/component/block/preview/video.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/video.html</render_template>
            <form>pagebuilder_video_form</form>
            <group>media</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="slide" translate="label">
            <label>Slide</label>
            <icon>icon-pagebuilder-slider</icon>
            <component>Magento_PageBuilder/js/component/block/slide</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/slide</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/slide.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/slide.html</render_template>
            <form>pagebuilder_slide_form</form>
            <group>media</group>
            <allowed_parents>advanced-slider</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="slide" component="Magento_PageBuilder/js/component/format/read/slide"/>
            </readers>
            <is_visible>false</is_visible>
        </type>
        <type name="advanced-slider" translate="label" sortOrder="30">
            <label>Advanced Slider</label>
            <icon>icon-pagebuilder-slider</icon>
            <component>Magento_PageBuilder/js/component/block/advanced-slider</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/advanced-slider</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/advanced-slider.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/advanced-slider.html</render_template>
            <form>pagebuilder_advanced_slider_form</form>
            <group>media</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="tabs" translate="label" sortOrder="1">
            <label>Tabs</label>
            <icon>icon-pagebuilder-tabs</icon>
            <preview_component>Magento_PageBuilder/js/component/block/preview/tabs</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/tabs.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/tabs.html</render_template>
            <form>pagebuilder_tabs_form</form>
            <group>interactive</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="tabs" component="Magento_PageBuilder/js/component/format/read/tabs"/>
            </readers>
        </type>
        <type name="accordion" translate="label" sortOrder="10">
            <label>Accordion</label>
            <icon>icon-pagebuilder-accordian</icon>
            <component>Magento_PageBuilder/js/component/block/accordion</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/accordion</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/accordion.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/accordion.html</render_template>
            <form>pagebuilder_accordion_form</form>
            <group>interactive</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="accordion" component="Magento_PageBuilder/js/component/format/read/accordion"/>
            </readers>
        </type>
        <type name="map" translate="label" sortOrder="20">
            <label>Map</label>
            <icon>icon-pagebuilder-map</icon>
            <preview_component>Magento_PageBuilder/js/component/block/preview/map</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/map.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/map.html</render_template>
            <form>pagebuilder_map_form</form>
            <group>interactive</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="map" component="Magento_PageBuilder/js/component/format/read/map"/>
            </readers>
        </type>
        <type name="newsletter" translate="label" sortOrder="30">
            <label>Newsletter</label>
            <icon>icon-pagebuilder-newsletter</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/newsletter</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/newsletter.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/newsletter.html</render_template>
            <form>pagebuilder_newsletter_form</form>
            <group>interactive</group>
            <backend_block>Magento\PageBuilder\Block\ContentType\Newsletter</backend_block>
            <backend_template>Magento_PageBuilder::pagebuilder/blocks/core/newsletter.phtml</backend_template>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="block" translate="label" sortOrder="1">
            <label>Block</label>
            <icon>icon-pagebuilder-block</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/content-block</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/block.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/block.html</render_template>
            <form>pagebuilder_block_form</form>
            <group>magento</group>
            <backend_block>Magento\PageBuilder\Block\ContentType\Block</backend_block>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="products" translate="label" sortOrder="20">
            <label>Product</label>
            <icon>icon-pagebuilder-products</icon>
            <form>pagebuilder_products_form</form>
            <group>magento</group>
            <preview_component>Magento_PageBuilder/js/component/block/preview/product</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/product.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/product.html</render_template>
            <backend_block>Magento\PageBuilder\Block\ContentType\Product</backend_block>
            <backend_template>Magento_PageBuilder::pagebuilder/blocks/core/product.phtml</backend_template>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
