            <backend_template>Magento_PageBuilder::pagebuilder/blocks/core/search.phtml</backend_template>
            <form>pagebuilder_search_form</form>
            <group>other</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
