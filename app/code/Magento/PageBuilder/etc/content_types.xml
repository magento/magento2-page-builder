            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="code" translate="label" sortOrder="10">
            <label>Code</label>
            <icon>icon-pagebuilder-code</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/code</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/code.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/code.html</render_template>
            <form>pagebuilder_code_form</form>
            <group>other</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="code" component="Magento_PageBuilder/js/component/format/read/code"/>
            </readers>
        </type>
        <type name="html" translate="label" sortOrder="20">
            <label>HTML</label>
            <icon>icon-pagebuilder-code</icon>
            <form>pagebuilder_html_form</form>
            <group>other</group>
            <allowed_parents>row,column</allowed_parents>
            <preview_component>Magento_PageBuilder/js/component/block/preview/html</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/html.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/html.html</render_template>
            <readers>
                <reader name="default" component="Magento_PageBuilder/js/component/format/read/default"/>
                <reader name="html" component="Magento_PageBuilder/js/component/format/read/html"/>
            </readers>
        </type>
        <type name="search" translate="label" sortOrder="10">
            <label>Search</label>
            <icon>icon-pagebuilder-search</icon>
            <component>Magento_PageBuilder/js/component/block/inline</component>
            <preview_component>Magento_PageBuilder/js/component/block/preview/search</preview_component>
            <preview_template>Magento_PageBuilder/component/block/preview/search.html</preview_template>
            <render_template>Magento_PageBuilder/component/block/render/search.html</render_template>
