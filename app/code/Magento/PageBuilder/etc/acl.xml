        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Magento_Backend::content">
                    <resource id="Magento_Backend::content_elements">
                        <resource id="Magento_PageBuilder::templates" title="Templates" translate="title" sortOrder="100">
                            <resource id="Magento_PageBuilder::template_save" title="Save Template" translate="title" sortOrder="10" />
                            <resource id="Magento_PageBuilder::template_apply" title="Apply Template" translate="title" sortOrder="20" />
                            <resource id="Magento_PageBuilder::template_delete" title="Delete Template" translate="title" sortOrder="30" />
                        </resource>
                    </resource>
                </resource>
            </resource>
        </resources>
    </acl>
