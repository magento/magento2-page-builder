        </type>
        <type name="products" translate="label" sortOrder="20">
            <label>Product</label>
            <icon>icon-bluefoot-products</icon>
            <form>products_form</form>
            <group>magento</group>
            <preview_component>Gene_BlueFoot/js/component/block/preview/product</preview_component>
            <preview_template>Gene_BlueFoot/component/block/preview/product.html</preview_template>
