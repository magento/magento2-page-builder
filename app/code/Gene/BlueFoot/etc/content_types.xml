            <preview_template>Gene_BlueFoot/component/block/preview/code.html</preview_template>
            <render_template>Gene_BlueFoot/component/block/render/code.html</render_template>
            <form>code_form</form>
            <group>other</group>
            <allowed_parents>row,column</allowed_parents>
