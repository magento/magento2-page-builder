        </type>
        <type name="tabs" translate="label" sortOrder="1">
            <label>Tabs</label>
            <icon>icon-bluefoot-tabs</icon>
            <preview_component>Gene_BlueFoot/js/component/block/preview/tabs</preview_component>
            <preview_template>Gene_BlueFoot/component/block/preview/tabs.html</preview_template>
            <render_template>Gene_BlueFoot/component/block/render/tabs.html</render_template>
            <form>tabs_form</form>
            <group>interactive</group>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Gene_BlueFoot/js/component/format/read/default"/>
                <reader name="tabs" component="Gene_BlueFoot/js/component/format/read/tabs"/>
            </readers>
        </type>
        <type name="accordion" translate="label" sortOrder="10">
            <label>Accordion</label>
            <icon>icon-bluefoot-accordian</icon>
