            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Gene_BlueFoot/js/component/format/read/default"/>
                <reader name="accordion" component="Gene_BlueFoot/js/component/format/read/accordion"/>
            </readers>
        </type>
        <type name="map" translate="label" sortOrder="20">
            <label>Map</label>
            <icon>icon-bluefoot-map</icon>
            <form>map_form</form>
            <group>interactive</group>
            <readers>
                <reader name="default" component="Gene_BlueFoot/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="newsletter" translate="label" sortOrder="30">
            <label>Newsletter</label>
            <icon>icon-bluefoot-newsletter</icon>
            <component>Gene_BlueFoot/js/component/block/inline</component>
            <preview_component>Gene_BlueFoot/js/component/block/preview/newsletter</preview_component>
            <preview_template>Gene_BlueFoot/component/block/preview/newsletter.html</preview_template>
            <render_template>Gene_BlueFoot/component/block/render/newsletter.html</render_template>
            <form>newsletter_form</form>
            <group>interactive</group>
            <backend_block>Gene\BlueFoot\Block\ContentType\Newsletter</backend_block>
            <backend_template>Gene_BlueFoot::pagebuilder/blocks/core/special/newsletter.phtml</backend_template>
            <allowed_parents>row,column</allowed_parents>
            <readers>
                <reader name="default" component="Gene_BlueFoot/js/component/format/read/default"/>
            </readers>
        </type>
        <type name="block" translate="label" sortOrder="1">
            <label>Block</label>
            <icon>icon-bluefoot-block</icon>
            <component>Gene_BlueFoot/js/component/block/inline</component>
            <preview_component>Gene_BlueFoot/js/component/block/preview/content-block</preview_component>
            <preview_template>Gene_BlueFoot/component/block/preview/block.html</preview_template>
            <render_template>Gene_BlueFoot/component/block/render/block.html</render_template>
