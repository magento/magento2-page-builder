<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * Mock bluefoot edit component to be duplicated
 * @author Dave Macaulay <dave@gene.co.uk>
 */
-->
<modal xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="template" xsi:type="string">templates/container/default</item>
    </argument>
    <insertForm name="bluefoot_edit_form">
        <argument name="data" xsi:type="array">
            <item name="template" xsi:type="string">templates/container/default</item>
            <item name="config" xsi:type="array">
                <item name="ns" xsi:type="string">contentblock_entity_form</item>
                <item name="toolbarContainer" xsi:type="string">${ $.parentName }</item>
                <item name="render_url" xsi:type="url" path="bluefoot/stage/render_edit">
                    <param name="buttons">1</param>
                    <param name="store">1</param>
                    <param name="identifier">CONTENT_BLOCK_IDENTIFIER</param>
                    <param name="edit_form_path">EDIT_FORM_PATH_PLACERHOLDER</param>
                </item>
                <item name="externalProvider" xsi:type="string">${ $.ns }.contentblock_entity_form</item>
                <item name="formSubmitType" xsi:type="string">ajax</item>
                <item name="autoRender" xsi:type="boolean">false</item>
            </item>
        </argument>
    </insertForm>
    <dataSource name="bluefoot_edit_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Ui\DataProvider\Entity\Form\EntityDataProvider</argument>
            <argument name="name" xsi:type="string">bluefoot_edit_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
</modal>