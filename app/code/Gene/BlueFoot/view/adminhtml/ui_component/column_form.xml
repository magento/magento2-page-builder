<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">column_form.column_form_data_source</item>
            <item name="deps" xsi:type="string">column_form.column_form_data_source</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">column_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="column_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Model\ContentBlock\DataProvider</argument>
            <argument name="name" xsi:type="string">column_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string" />
            <argument name="requestFieldName" xsi:type="string" />
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="appearance">
        <settings>
            <label translate="true">Appearance</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="width" sortOrder="5" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">16.7%</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Width</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">16.7%</item>
                                <item name="label" xsi:type="string" translate="true">1/6</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">33%</item>
                                <item name="label" xsi:type="string" translate="true">1/3</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">50%</item>
                                <item name="label" xsi:type="string" translate="true">1/2</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">66%</item>
                                <item name="label" xsi:type="string" translate="true">2/3</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">82.5%</item>
                                <item name="label" xsi:type="string" translate="true">5/6</item>
                            </option>
                            <option name="5" xsi:type="array">
                                <item name="value" xsi:type="string">100%</item>
                                <item name="label" xsi:type="string" translate="true">1</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="appearance" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">align-top</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Appearance</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">align-top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">align-center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">align-bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="min_height" sortOrder="20" formElement="input">
            <settings>
                <label translate="true">Minimum Height</label>
                <addAfter>px</addAfter>
                <validation>
                    <rule name="validate-number" xsi:type="boolean">true</rule>
                </validation>
            </settings>
        </field>
    </fieldset>
    <fieldset name="background">
        <settings>
            <label translate="true">Background</label>
            <collapsible>true</collapsible>
            <opened>true</opened>
        </settings>
        <field name="background_color" sortOrder="10" formElement="input">
            <settings>
                <label translate="true">Background Color</label>
            </settings>
        </field>
        <field name="background_image" sortOrder="20" formElement="fileUploader">
            <settings>
                <notice translate="true">Allowed file types: jpeg, gif, png.</notice>
                <label translate="true">Background Image</label>
                <componentType>fileUploader</componentType>
            </settings>
            <formElements>
                <fileUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">bluefoot/contenttype/image_upload</param>
                        </uploaderConfig>
                        <previewTmpl>Gene_BlueFoot/form/element/uploader/preview.html</previewTmpl>
                    </settings>
                </fileUploader>
            </formElements>
        </field>
        <field name="background_position" sortOrder="30" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">top_aligned</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Position</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">left top</item>
                                <item name="label" xsi:type="string" translate="true">Top Aligned</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">center center</item>
                                <item name="label" xsi:type="string" translate="true">Centered</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">left bottom</item>
                                <item name="label" xsi:type="string" translate="true">Bottom Aligned</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_size" sortOrder="40" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">auto</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Size</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">auto</item>
                                <item name="label" xsi:type="string" translate="true">Auto</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">cover</item>
                                <item name="label" xsi:type="string" translate="true">Cover</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">contain</item>
                                <item name="label" xsi:type="string" translate="true">Contain</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="background_repeat" sortOrder="50" formElement="checkbox">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>boolean</dataType>
                <label translate="true">Background Repeat</label>
                <dataScope>background_repeat</dataScope>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <checkbox>
                    <settings>
                        <valueMap>
                            <map name="false" xsi:type="number">0</map>
                            <map name="true" xsi:type="number">1</map>
                        </valueMap>
                        <prefer>toggle</prefer>
                    </settings>
                </checkbox>
            </formElements>
        </field>
        <field name="background_attachment" sortOrder="60" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">scroll</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Background Attachment</label>
                <validation>
                    <rule name="required-entry" xsi:type="boolean">true</rule>
                </validation>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">scroll</item>
                                <item name="label" xsi:type="string" translate="true">Scroll</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">fixed</item>
                                <item name="label" xsi:type="string" translate="true">Fixed</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="margins_and_padding" formElement="input" component="Gene_BlueFoot/js/form/element/margins_and_padding">
            <settings>
                <label>Margins and Padding</label>
            </settings>
        </field>
    </fieldset>
</form>
