<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * BlueFoot template manager
 * @author Aidan Threadgold <aidan@gene.co.uk>
*/
-->
<modal xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="template" xsi:type="string">templates/container/default</item>
        <item name="config" xsi:type="array">
            <item name="component" xsi:type="string">Gene_BlueFoot/js/component/template</item>

            <item name="create_modal" xsi:type="array">
                <item name="render_url" xsi:type="url" path="bluefoot/stage/template_form" />
                <item name="update_url" xsi:type="url" path="bluefoot/stage/template_save" />
            </item>

            <item name="options" xsi:type="array">
                <item name="title" xsi:type="string" translate="true">Template Manager</item>
                <item name="buttons" xsi:type="array">
                    <item name="0" xsi:type="array">
                        <item name="text" xsi:type="string">Use Template</item>
                        <item name="class" xsi:type="string">action-primary</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">${ $.name }</item>
                                <item name="actionName" xsi:type="string">actionDone</item>
                            </item>
                        </item>
                    </item>
                    <item name="1" xsi:type="array">
                        <item name="text" xsi:type="string">Cancel</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">${ $.name }</item>
                                <item name="actionName" xsi:type="string">actionCancel</item>
                            </item>
                        </item>
                    </item>
                    <item name="2" xsi:type="array">
                        <item name="text" xsi:type="string">New Template</item>
                        <item name="actions" xsi:type="array">
                            <item name="0" xsi:type="array">
                                <item name="targetName" xsi:type="string">${ $.name }</item>
                                <item name="actionName" xsi:type="string">actionSaveTemplate</item>
                            </item>
                        </item>
                    </item>
                </item>
            </item>
        </item>
    </argument>

    <dataSource name="bluefoot_template_manager_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Ui\DataProvider\Template\DataProvider</argument>
            <argument name="name" xsi:type="string">bluefoot_template_manager_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <!-- Child HTML Component to display our list of templates -->
    <htmlContent class="Gene\BlueFoot\Ui\Component\Template" name="bluefoot_template_manager_content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="component" xsi:type="string">Gene_BlueFoot/js/component/template/list</item>
                <item name="render_url" xsi:type="url" path="bluefoot/stage/template_index" />
            </item>
        </argument>
    </htmlContent>
</modal>