<?xml version="1.0" encoding="UTF-8"?>
<!--
/**
 * Mock bluefoot edit component to be duplicated
 * @author Dave Macaulay <dave@gene.co.uk>
 */
-->
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">contentblock_entity_form.contentblock_form_data_source</item>
            <item name="deps" xsi:type="string">contentblock_entity_form.contentblock_form_data_source</item>
            <item name="namespace" xsi:type="string">contentblock_edit</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="close" xsi:type="string">Gene\BlueFoot\Block\Adminhtml\Entity\Edit\Button\CloseButton</item>
            <item name="save" xsi:type="string">Gene\BlueFoot\Block\Adminhtml\Entity\Edit\Button\SaveButton</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
        <item name="childrenFromMeta" xsi:type="boolean">true</item>
    </argument>
    <dataSource name="contentblock_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Ui\DataProvider\Entity\Form\EntityDataProvider</argument>
            <argument name="name" xsi:type="string">contentblock_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
</form>
