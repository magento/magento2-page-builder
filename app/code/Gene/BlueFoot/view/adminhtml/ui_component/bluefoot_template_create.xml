<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">bluefoot_template_create.bluefoot_template_create_data_source</item>
            <item name="deps" xsi:type="string">bluefoot_template_create.bluefoot_template_create_data_source</item>
        </item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">bluefoot_template_create</item>
            <item name="toolbarContainer" xsi:type="string">${ $.parentName }</item>
            <item name="externalProvider" xsi:type="string">${ $.ns }.bluefoot_template_create</item>
            <item name="formSubmitType" xsi:type="string">ajax</item>
            <item name="autoRender" xsi:type="boolean">false</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="close" xsi:type="string">Gene\BlueFoot\Block\Adminhtml\Stage\Template\Button\CloseButton</item>
            <item name="save" xsi:type="string">Gene\BlueFoot\Block\Adminhtml\Stage\Template\Button\SaveButton</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>

    <dataSource name="bluefoot_template_create_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Ui\DataProvider\Template\DataProvider</argument>
            <argument name="name" xsi:type="string">bluefoot_template_create_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">template_id</argument>
            <argument name="requestFieldName" xsi:type="string">template_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="bluefoot/stage/template_save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>

    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="collapsible" xsi:type="boolean">false</item>
                <item name="label" xsi:type="string" translate="true">Template Information</item>
                <item name="sortOrder" xsi:type="number">10</item>
            </item>
        </argument>

        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">bluefoot_template_create_data_source</item>
                    <item name="sortOrder" xsi:type="number">10</item>
                    <item name="dataScope" xsi:type="string">name</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>

        <field name="preview" class="Gene\BlueFoot\Ui\Component\Form\Element\DataType\TemplatePreview">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string" translate="true">Template Preview</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">bluefoot_template_create_data_source</item>
                    <item name="dataScope" xsi:type="string">preview</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
                <item name="js_config" xsi:type="array">
                    <item name="component" xsi:type="string">Gene_BlueFoot/js/component/core/template/preview</item>
                    <item name="template" xsi:type="string">Gene_BlueFoot/component/core/template/preview</item>
                    <item name="stageNameSpace" xsi:type="string">bluefoot_template_manager.bluefoot_template_manager</item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>