<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">row_form.row_form_data_source</item>
            <item name="deps" xsi:type="string">row_form.row_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Row</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">row_form</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <buttons>
            <button name="save" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\SaveButton"/>
            <button name="reset" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\ResetButton"/>
            <button name="close" class="Gene\BlueFoot\Block\Adminhtml\ContentType\Edit\CloseButton"/>
        </buttons>
    </settings>
    <dataSource name="row_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Gene\BlueFoot\Model\ContentBlock\DataProvider</argument>
            <argument name="name" xsi:type="string">row_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string" />
            <argument name="requestFieldName" xsi:type="string" />
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Gene_BlueFoot/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string"/>
            </item>
        </argument>
        <field name="heading_type">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Row Form</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">page</item>
                    <item name="sortOrder" xsi:type="number">20</item>
                    <item name="dataScope" xsi:type="string">heading_type</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
    <fieldset name="advanced">
        <settings>
            <label translate="true">Advanced</label>
            <collapsible>true</collapsible>
        </settings>
        <field name="text_color" sortOrder="1" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">Default</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Text Color</label>
                <addAfter>hex code</addAfter>
                <dataScope>text_color</dataScope>
            </settings>
        </field>
        <field name="text_align" sortOrder="10" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">default</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Alignment</label>
                <notice translate="true">Default alignment will cause the element to inherit it's alignment from the parent elements.</notice>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">default</item>
                                <item name="label" xsi:type="string" translate="true">Default</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">left</item>
                                <item name="label" xsi:type="string" translate="true">Left</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">center</item>
                                <item name="label" xsi:type="string" translate="true">Center</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">right</item>
                                <item name="label" xsi:type="string" translate="true">Right</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="border" sortOrder="20" formElement="select">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border</label>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options>
                            <option name="0" xsi:type="array">
                                <item name="value" xsi:type="string">none</item>
                                <item name="label" xsi:type="string" translate="true">None</item>
                            </option>
                            <option name="1" xsi:type="array">
                                <item name="value" xsi:type="string">dotted</item>
                                <item name="label" xsi:type="string" translate="true">Dotted</item>
                            </option>
                            <option name="2" xsi:type="array">
                                <item name="value" xsi:type="string">dashed</item>
                                <item name="label" xsi:type="string" translate="true">Dashed</item>
                            </option>
                            <option name="3" xsi:type="array">
                                <item name="value" xsi:type="string">solid</item>
                                <item name="label" xsi:type="string" translate="true">Solid</item>
                            </option>
                            <option name="4" xsi:type="array">
                                <item name="value" xsi:type="string">double</item>
                                <item name="label" xsi:type="string" translate="true">Double</item>
                            </option>
                            <option name="5" xsi:type="array">
                                <item name="value" xsi:type="string">groove</item>
                                <item name="label" xsi:type="string" translate="true">Groove</item>
                            </option>
                            <option name="6" xsi:type="array">
                                <item name="value" xsi:type="string">ridge</item>
                                <item name="label" xsi:type="string" translate="true">Ridge</item>
                            </option>
                            <option name="7" xsi:type="array">
                                <item name="value" xsi:type="string">inset</item>
                                <item name="label" xsi:type="string" translate="true">Inset</item>
                            </option>
                            <option name="8" xsi:type="array">
                                <item name="value" xsi:type="string">outset</item>
                                <item name="label" xsi:type="string" translate="true">Outset</item>
                            </option>
                        </options>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="border_color" sortOrder="30" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">#000000</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Color</label>
                <addAfter>hex color</addAfter>
                <dataScope>border_color</dataScope>
            </settings>
        </field>
        <field name="border_size" sortOrder="40" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Size</label>
                <addAfter>px</addAfter>
                <dataScope>border_size</dataScope>
            </settings>
        </field>
        <field name="border_radius" sortOrder="50" formElement="input">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="default" xsi:type="string">0</item>
                </item>
            </argument>
            <settings>
                <dataType>text</dataType>
                <label translate="true">Border Radius</label>
                <addAfter>px</addAfter>
                <dataScope>border_radius</dataScope>
            </settings>
        </field>
        <field name="css_classes" sortOrder="70" formElement="input">
            <settings>
                <dataType>text</dataType>
                <label translate="true">CSS Classes</label>
                <dataScope>css_classes</dataScope>
                <notice translate="true">Space separated list of classes.</notice>
            </settings>
        </field>
        <field name="margins_and_padding" sortOrder="80" formElement="input" component="Gene_BlueFoot/js/form/element/margins_and_padding">
            <settings>
                <label>Margins and Padding</label>
            </settings>
        </field>
    </fieldset>
</form>
