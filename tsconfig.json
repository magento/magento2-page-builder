{
    "compilerOptions": {
      "strictNullChecks": false,
      "module": "esnext",
      "target": "es2015",
      "allowJs": true,
      "noImplicitAny": true,
      "pretty": true,
      "allowSyntheticDefaultImports": true,
      "typeRoots": ["./node_modules/@types"],
      "lib" : ["es2015", "es2015.iterable", "es2015.promise", "dom"]
    },
    "include": [
      "./node_modules/@types/**/*.d.ts",
      "./**/*.d.ts",
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }