<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="ImageOnFrontend">
        <element name="imageDisplay" type="button" selector="figure[data-role='image']"/>
        <element name="imageElement" type="button" selector="figure[data-role='image'] img:nth-child({{arg1}})" parameterized="true"/>
        <element name="imageSource" type="button" selector="img.pagebuilder-mobile-hidden[src*='{{arg1}}'][src$='.{{arg2}}']" parameterized="true"/>
        <element name="imageLink" type="button" selector="figure[data-role='image'] a[href='{{arg1}}']" parameterized="true"/>
        <element name="imageLinkTarget" type="button" selector="figure[data-role='image'] a[target='{{arg1}}']" parameterized="true"/>
        <element name="imageHasAltText" type="button" selector="img.pagebuilder-mobile-hidden[alt='{{arg1}}']" parameterized="true"/>
        <element name="imageHasTitleTag" type="button" selector="img.pagebuilder-mobile-hidden[title='{{arg1}}']" parameterized="true"/>
        <element name="mobileImageSource" type="button" selector="img.pagebuilder-mobile-only[src*='{{arg1}}'][src$='.{{arg2}}']" parameterized="true"/>
        <element name="imageHasCaption" type="button" selector="figcaption"/>
        <element name="backgroundImageSource" type="text" selector="//div[contains(@style,'{{var1}}')]" parameterized="true"/>
    </section>
    <section name="ImageOnBackend">
        <element name="default" type="text" selector="(//div[contains(@class,'pagebuilder-content-type') and contains(@class,'pagebuilder-image')])[{{arg1}}][@style='border: {{arg2}}; border-radius: {{arg3}}px; margin: {{arg4}}px; padding: {{arg5}}px;']" parameterized="true"/>
        <element name="imagePreview" type="text" selector="//div[contains(@class, 'pagebuilder-image')][1]//div//span[text()='Empty Image']"/>
    </section>
    <section name="UploadImageSection">
        <element name="PlaceholderContent" type="button" selector="//span[text()='{{var1}}']//parent::label//following-sibling::div//p[text()='Browse to find or drag image here']" parameterized="true"/>
        <element name="SelectFromGalleryBtn" type="button" selector="//span[text()='{{var1}}']//parent::label//following-sibling::div//label[text()='Select from Gallery']" parameterized="true"/>
    </section>
    <section name="ImageOnPreview">
        <element name="imageName" type="text" selector="//div[contains(text(),'{{var1}}')]" parameterized="true"/>
        <element name="imagePreview" type="text" selector="//img[@class='preview-image']"/>
        <element name="imageLocalSource" type="text" selector="//img[@src='{{var1}}/{{var2}}']" parameterized="true"/>
        <element name="imageSource" type="text" selector="//img[contains(@src,'{{var1}}')]" parameterized="true"/>
        <element name="trashBinIcon" type="button" selector=".action-remove"/>
    </section>
</sections>
