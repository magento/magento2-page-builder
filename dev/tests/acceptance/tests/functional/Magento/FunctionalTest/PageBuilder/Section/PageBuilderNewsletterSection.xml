<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="NewsletterOnFrontend">
        <element name="form" type="button" selector="//form[contains(@class, 'subscribe')]"/>
        <element name="title" type="button" selector="//div[contains(@class, 'block-title')]/strong/span[text() = '{{arg1}}']" parameterized="true"/>
        <element name="placeholder" type="button" selector="//input[@placeholder = '{{arg1}}']" parameterized="true"/>
        <element name="label" type="button" selector="//label[text() = '{{arg1}}']" parameterized="true"/>
        <element name="button" type="button" selector="//button/span/span[text() = '{{arg1}}']" parameterized="true"/>
    </section>
    <section name="NewsletterOnStage">
        <element name="default" type="button" selector="(//div[contains(@class,'pagebuilder-newsletter')]//div[contains(@data-bind,'preview.data.html')])[{{arg1}}][@style='border: {{arg2}}; border-radius: {{arg3}}px; margin: {{arg4}}px; padding: {{arg5}}px;']" parameterized="true"/>
    </section>
</sections>
