    <section name="TextOnConfiguration">
        <!-- WYSIWYG Enabled -->
        <element name="tinyMCEIFrame" type="text" selector="pagebuilder_text_form_content_ifr"/>
        <element name="textInIFrame" type="text" selector="//body//p[.='{{arg1}}']" parameterized="true"/>
        <element name="tinyMCEVariable" type="text" selector="(//body//span[contains(@class,'magento-variable') and .='{{arg1}}'])[{{arg2}}]" parameterized="true"/>
        <element name="tinyMCEWidget" type="text" selector="(//body//span[contains(@class,'magento-widget') and .='{{arg1}}'])[{{arg2}}]" parameterized="true"/>
        <!-- WYSIWYG Disabled -->
        <element name="textArea" type="text" selector="#pagebuilder_text_form_content"/>
        <element name="textAreaId" type="text" selector="pagebuilder_text_form_content"/>
        <element name="insertWidgetButton" type="text" selector="//button[contains(@class,'action-add-widget')][.='Insert Widget...']"/>
        <element name="insertImageButton" type="text" selector="//button[contains(@class,'action-add-image')][.='Insert Image...']"/>
        <element name="insertVariableButton" type="text" selector="//button[contains(@class,'add-variable')][.='Insert Variable...']"/>
    </section>
    <section name="TextOnStorefront">
        <element name="base" type="text" selector="(//div[@data-role='text'])[{{arg1}}]" parameterized="true"/>
        <element name="textAreaText" type="text" selector="(//div[@data-role='text'])[{{arg1}}][.='{{arg2}}']" parameterized="true"/>
        <element name="textAreaWidget" type="text" selector="(//div[@data-role='text'])[{{arg1}}]//a[contains(@href,'{{arg2}}{{arg3}}')]" parameterized="true"/>
        <element name="textAreaVariable" type="text" selector="(//div[@data-role='text'])[{{arg1}}]//a[contains(@href,'{{arg2}}{{arg3}}')]" parameterized="true"/>
        <element name="text" type="text" selector="(//div[@data-role='text'])[{{arg1}}]//p[.='{{arg2}}']" parameterized="true"/>
        <!-- Advanced Configuration -->
        <element name="alignment" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'text-align: {{arg2}};')]" parameterized="true"/>
        <element name="noAlignment" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'text-align:'))]" parameterized="true"/>
        <element name="border" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'border-style: {{arg2}};')]" parameterized="true"/>
        <element name="noBorder" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'border-style:'))]" parameterized="true"/>
        <element name="borderWidth" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'border-width: {{arg2}}px;')]" parameterized="true"/>
        <element name="noBorderWidth" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'border-width:'))]" parameterized="true"/>
        <element name="borderColor" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'border-color: {{arg2}};')]" parameterized="true"/>
        <element name="noBorderColor" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'border-color:'))]" parameterized="true"/>
        <element name="borderRadius" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'border-radius: {{arg2}}px;')]" parameterized="true"/>
        <element name="noBorderRadius" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'border-radius:'))]" parameterized="true"/>
        <element name="cssClasses" type="text" selector="(//div[@data-role='text'])[{{arg1}}][@class='{{arg2}}']" parameterized="true"/>
        <element name="noCssClasses" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(@class)]" parameterized="true"/>
        <element name="margins" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'margin: {{arg2}}px;')]" parameterized="true"/>
        <element name="noMargins" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'margin:'))]" parameterized="true"/>
        <element name="padding" type="text" selector="(//div[@data-role='text'])[{{arg1}}][contains(@style,'padding: {{arg2}}px;')]" parameterized="true"/>
        <element name="noPadding" type="text" selector="(//div[@data-role='text'])[{{arg1}}][not(contains(@style,'padding:'))]" parameterized="true"/>
    </section>
    <section name="TextOnBackend">
        <element name="textInstance" type="button" selector='//div[contains(@class, "pagebuilder-textarea")][1]/div[1]'/>
        <element name="textArea" type="text" selector='#pagebuilder_text_form_content'/>
        <element name="triggerValidation" type="button" selector='div.modal-content div.mce-edit-area'/>
    </section>
    <section name="TextOnSlider">
        <element name="textArea" type="text" selector="#pagebuilder_slide_form_content"/>
    </section>
    <!-- Move the below elements to CE after code freeze -->
    <section name="moveToCE">
        <element name="SelectPageButton" type="button" selector="//button[@title='Select Page...']"/>
        <element name="generalFilter" type="input" selector="input.admin__control-text[name='{{arg1}}']" parameterized="true"/>
    </section>
    <section name="WYSIWYGOnPageBuilder">
        <element name="undo" type="button" selector="div[aria-label='Undo']"/>
        <element name="redo" type="button" selector="div[aria-label='Redo']"/>
        <element name="fontSize" type="button" selector="div[aria-label='Font Sizes']"/>
        <element name="textColor" type="button" selector="div[aria-label='Text color']"/>
        <element name="backgroundColor" type="button" selector="div[aria-label='Background color']"/>
        <element name="formatSelector" type="button" selector="//span[text()='Formats']"/>
    </section>
</sections>
