    <test name="ClearSearchInPanel">
        <annotations>
            <features value="PageBuilder Preview MAGETWO-83848"/>
            <stories value="Filtering Pagebuilder Content on Panel MAGETWO-71566"/>
            <title value="Clear search in PageBuilder Panel using clear search button and backspace"/>
            <description value="The clear search button is displayed only when I start typing in the search field. When a search is cleared, content block groups are displayed."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-81828"/>
            <testCaseId value="MAGETWO-81829"/>
            <group value="pagebuilder1"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="EnabledWYSIWYG" stepKey="enableWYSIWYG"/>
            <actionGroup ref="enablePageBuilderSetting" stepKey="enablePageBuilderSetting"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="DisabledWYSIWYG" stepKey="disableWYSIWYG"/>
            <amOnPage url="admin/admin/auth/logout" stepKey="amOnLogoutPage"/>
        </after>
        <comment userInput="Verify Clear Search button is not shown before typing" stepKey="commentClearSearchButton"/>
        <dontSeeElement selector='//*[@id="pagebuilder-panel"]/div[1]/a' stepKey="dontSeeClearSearch"/>
        <fillField selector="{{PageBuilderActionsSection.searchPanel}}" userInput="i" stepKey="fillSearchFieldi"/>
        <seeElement selector='{{PageBuilderActionsSection.searchField}}' stepKey="seeClearSearch"/>
        <see userInput="Image" selector="{{PageBuilderActionsSection.searchResults}}" stepKey="validateImageAppears"/>
        <dontSee userInput="Row" selector="{{PageBuilderActionsSection.searchResults}}" stepKey="validateRowDoesNotAppear"/>
        <comment userInput="Use Clear Search button to show all content blocks on Pagebuilder panel" stepKey="commentClearSearch"/>
        <click selector="{{PageBuilderActionsSection.clearSearch}}" stepKey="clickClearSearch"/>
        <dontSee userInput="i" selector="{{PageBuilderActionsSection.searchPanel}}" stepKey="validateInputClearedAfterClickClear"/>
        <actionGroup ref="validateGroupsAndContentTypes" stepKey="validateGroupsAndContentTypesAfterClickClear"/>
        <actionGroup ref="closePageBuilderPanelGroups" stepKey="closePageBuilderPanelGroups"/>
        <fillField selector="{{PageBuilderActionsSection.searchPanel}}" userInput="r" stepKey="fillSearchFieldr"/>
        <see userInput="Row" selector="{{PageBuilderActionsSection.searchResults}}" stepKey="validateRowAppears"/>
        <dontSee userInput="Column" selector="{{PageBuilderActionsSection.searchResults}}" stepKey="validateColumnDoesNotAppear"/>
        <comment userInput="Clear input field using backspace to show all content blocks on Pagebuilder panel" stepKey="commentDeleteSearch"/>
        <pressKey selector="{{PageBuilderActionsSection.searchPanel}}" parameterArray="[\WebDriverKeys::BACKSPACE]" stepKey="enterSearchInput"/>
        <dontSee userInput="r" selector="{{PageBuilderActionsSection.searchPanel}}" stepKey="validateInputClearedAfterRemoveCharacters"/>
        <actionGroup ref="validateGroupsAndContentTypes" stepKey="validateGroupsAndContentTypesAfterClearField"/>
    </test>
</tests>
