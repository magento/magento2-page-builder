    <test name="ClearSearchInPanel">
        <annotations>
            <features value="PageBuilder Preview MAGETWO-83848"/>
            <stories value="Filtering Pagebuilder Content on Panel MAGETWO-71566"/>
            <title value="Clear search in PageBuilder Panel"/>
            <description value="The clear search button is displayed only when I start typing in the search field. When a search is cleared, content block groups are displayed."/>
            <severity value="CRITICAL"/>
            <testCaseId value="MAGETWO-81828"/>
            <group value="pagebuilder"/>
            <group value="skip"/>
        </annotations>
        <before>
            <actionGroup ref="LoginAsAdmin" stepKey="loginAsAdmin"/>
            <actionGroup ref="EnabledWYSIWYG" stepKey="enableWYSIWYG"/>
            <actionGroup ref="enablePageBuilderSetting" stepKey="enablePageBuilderSetting"/>
            <actionGroup ref="navigateToAPageWithPageBuilder" stepKey="navigateToAPageWithPageBuilder"/>
            <actionGroup ref="switchToPageBuilderStage" stepKey="switchToPageBuilderStage"/>
        </before>
        <after>
            <actionGroup ref="DisabledWYSIWYG" stepKey="disableWYSIWYG"/>
            <amOnPage url="admin/admin/auth/logout" stepKey="amOnLogoutPage"/>
        </after>
        <!--toggle clearSearch on-->
        <dontSeeElement selector='//*[@id="pagebuilder-panel"]/div[1]/a' stepKey="dontSeeClearSearch"/>
        <fillField selector="{{PageBuilderActionsSection.searchPanel}}" userInput="b" stepKey="fillSearchField"/>
        <seeElement selector='{{PageBuilderActionsSection.searchField}}' stepKey="seeClearSearch"/>
        <!--click clear search, empty search field when framework supports this, see blocks-->
        <click selector="{{PageBuilderActionsSection.clearSearch}}" stepKey="clickClearSearch"/>
        <actionGroup ref="validateGroupsAndContentTypes" stepKey="validateGroupsAndContentTypes"/>
    </test>
</tests>
