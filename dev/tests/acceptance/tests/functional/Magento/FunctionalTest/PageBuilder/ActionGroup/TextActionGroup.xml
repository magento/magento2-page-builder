        <arguments>
            <argument name="property" defaultValue=""/>
        </arguments>
        <waitForElementVisible selector="{{TextOnConfiguration.textIFrame}}" stepKey="waitForIFrame"/>
        <switchToIFrame selector="{{TextOnConfiguration.textIFrameId}}" stepKey="switchToIFrame"/>
