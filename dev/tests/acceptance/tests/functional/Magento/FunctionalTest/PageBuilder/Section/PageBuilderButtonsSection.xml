<sections xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:noNamespaceSchemaLocation="../../../../../../vendor/magento/magento2-functional-testing-framework/src/Magento/FunctionalTestingFramework/Page/etc/SectionObject.xsd">
    <section name="ButtonsBackendSection">
        <element name="default" type="button" selector="(//div[contains(@class,'pagebuilder-buttons')])[{{arg1}}][@style='border: {{arg2}}; border-radius: {{arg3}}px; margin: {{arg4}}px; padding: {{arg5}}px;']" parameterized="true"/>
        <element name="addNewButtonItem" type="button" selector="//button[contains(text(), 'Add Button')]"/>
        <element name="buttonItemElement" type="button" selector="//div[contains(@class, 'pagebuilder-button-item')]/a[contains(@class, '{{arg1}}')]/span[contains(text(), '{{arg2}}')]" parameterized="true"/>
        <element name="emptyButtonItemElement" type="button" selector="//div[contains(@class, 'pagebuilder-button-item')]/a[contains(@class, '{{arg1}}')]/span[contains(@class, 'placeholder-text')]" parameterized="true"/>
        <element name="editableButtonItemElement" type="button" selector="//div[contains(@class, 'pagebuilder-button-item')]/a[contains(@class, '{{arg1}}')]/span[contains(@contenteditable, 'true')]" parameterized="true"/>
        <element name="editButtonItemElement" type="button" selector="(//div[contains(@class, 'pagebuilder-content-type') and contains(@class, 'pagebuilder-{{arg1}}')])[{{arg2}}]/descendant::*[@class='edit-block']" parameterized="true"/>
    </section>
    <section name="ButtonsFrontendSection">
        <element name="buttonItemText" type="button" selector="//div[@data-role='button-item']/a[contains(@class, '{{arg1}}')]/span[contains(text(), '{{arg2}}')]" parameterized="true"/>
        <element name="buttonItemElement" type="button" selector="//div[@data-role='button-item']/a[contains(@class, '{{arg1}}')][contains(@href, '{{arg2}}')]/span[contains(text(), '{{arg3}}')]" parameterized="true"/>
        <element name="emptyButtonItemElement" type="button" selector="//div[@data-role='button-item']/a[contains(@class, '{{arg1}}')]/span[not(text())]" parameterized="true"/>
        <element name="class" type="button" selector="div[data-role='button-item'][class*='{{arg1}}']" parameterized="true"/>
    </section>
    <section name="ButtonBackendSection">
        <element name="default" type="button" selector="(//div[contains(@class,'pagebuilder-button-item')])[{{arg1}}]//a[not(@style)]//span" parameterized="true"/>
    </section>
</sections>
